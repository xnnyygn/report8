<h2>Login</h2>

<% if alert %>
<p class="alert"><%= alert %></p>
<% end %>

<%= form_tag login_path, method: :post do %>
	<p>
		<%= label_tag :name %>
		<%= text_field_tag :name %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<p>
		<%= submit_tag 'Login' %>
	</p>
<% end %>